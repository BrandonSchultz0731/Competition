              <TextField fx:id="createUsername" layoutX="96.0" layoutY="51.0" promptText="Enter Username" />
              <PasswordField fx:id="createPassword" layoutX="95.0" layoutY="90.0" promptText="Enter Password" />
                  <Label layoutX="5.0" layoutY="135.0" text="First Name:" />
